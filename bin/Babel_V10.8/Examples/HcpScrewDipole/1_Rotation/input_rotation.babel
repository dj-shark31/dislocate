  ! Apply rotation
  rotate=.true.         

  ! ----------------
  ! Rotation matrix 
  rot(1,1)=0.
  rot(1,2)=0.
  rot(1,3)=1.

  rot(2,1)=0.
  rot(2,2)=1.
  rot(2,3)=0.

  rot(3,1)=-1.
  rot(3,2)=0.
  rot(3,3)=0.

