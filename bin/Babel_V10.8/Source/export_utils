#!/bin/sh

if [ $# \< 1 ]; then
	echo "Directory where scripts have to be exported"
	read BIN_temp
else
	BIN_temp="$1"
fi

# Make an absolute path
BIN=`cd $BIN_temp; pwd`

if [ ! -f "$BIN/babel" ]; then
	echo "cannot find executable babel in $BIN"
	exit
fi

for file in `ls -1 Utils/*.script`; do
	outFile=`echo $file | sed -e 's/Utils\///' -e 's/.script//'`
	echo "#!/bin/sh" > $BIN/$outFile
	echo ""								>> $BIN/$outFile
	echo "#### Variables Ã  configurer ######################"	>> $BIN/$outFile
	echo "babel=$BIN/babel"						>> $BIN/$outFile
	echo "##################################################"	>> $BIN/$outFile
	cat $file							>> $BIN/$outFile
	chmod +x $BIN/$outFile
done
