
printUsage() {
	echo "Usage: $0 input_file output_file"
	echo "  input file with gin format"
	echo "  output file with siesta format"
	exit 1
}

if [ $# \< 2 ]; then
	printUsage
fi

ginFile=$1
siestaFile=$2

if [ ! -f $ginFile ]; then
	echo "file $ginFile does not exist"
	exit 1
fi

tmpFile=`mktemp`
echo > $tmpFile "
&input
  verbosity=0
  inpGin=.true.
  inpFile='$ginFile'
  outSiesta=.true.
  outFile='$siestaFile'
&end
" 
$babel $tmpFile
rm -f $tmpFile
