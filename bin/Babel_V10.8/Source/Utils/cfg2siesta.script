
printUsage() {
	echo "Usage: $0 input_file output_file"
	echo "  input file with cfg format"
	echo "  output file with siesta format"
	exit 1
}

if [ $# \< 2 ]; then
	printUsage
fi

cfgFile=$1
siestaFile=$2

if [ ! -f $cfgFile ]; then
	echo "file $cfgFile does not exist"
	exit 1
fi

tmpFile=`mktemp`
echo > $tmpFile "
&input
  verbosity=0
  inpCfg=.true.
  inpFile='$cfgFile'
  outSiesta=.true.
  outFile='$siestaFile'
&end
" 
$babel $tmpFile
rm -f $tmpFile
