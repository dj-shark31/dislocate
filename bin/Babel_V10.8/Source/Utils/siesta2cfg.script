
printUsage() {
	echo "Usage: $0 input_file output_file"
	echo "  input file with siesta format"
	echo "  output file with cfg format"
	exit 1
}

if [ $# \< 2 ]; then
	printUsage
fi

siestaFile=$1
cfgFile=$2

if [ ! -f $siestaFile ]; then
	echo "file $siestaFile does not exist"
	exit
fi

tmpFile=`mktemp`
echo > $tmpFile "
&input
  verbosity=0
  inpSiesta=.true.
  inpFile='$siestaFile'
  outCfg=.true.
  outFile='$cfgFile'
&end
" 
$babel $tmpFile
rm -f $tmpFile
